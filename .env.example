# API Configuration
REACT_APP_API_URL=http://localhost:8888
REACT_APP_API_KEY=your_api_key_here

# Network Configuration
REACT_APP_DEFAULT_NETWORK=eth
REACT_APP_ENABLE_TESTNET=true

# Optional: Custom RPC URLs
# REACT_APP_ETH_RPC_URL=https://ethereum.publicnode.com

# Feature Flags (frontend)
# Enable Bitcoin Taproot network in UI
REACT_APP_ENABLE_BTC_TAPROOT=false
# Enable Ledger hardware wallet integration (frontend scaffold)
REACT_APP_ENABLE_LEDGER=false
# Enable Trezor hardware wallet integration (frontend scaffold)
REACT_APP_ENABLE_TREZOR=false
# Use mock backend responses when server unavailable (for frontend dev)
REACT_APP_USE_MOCK_BACKEND=false
